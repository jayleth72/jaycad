<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.applications.jay_letheby.jaycad.Fragments.DegMinSecConversionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:text="Deg/Min/Sec Conversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                tools:text="Angle Conversion"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textColor="#FFF"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:text="DECIMAL DEGREES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="20sp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/decimalDegreesTxt"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp"
                android:textColor="@color/colorEditText" />

            <Button
                android:text="convert"
                android:layout_height="60dp"
                android:id="@+id/convertBtn"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/action_buttons"
                android:textColor="@color/colorActionButtonsText"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:text="DEGREES"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textSize="20sp" />

                <TextView
                    android:text="MINUTES"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:text="SECONDS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeTxtView"
                    android:textSize="17sp"
                    android:textAlignment="gravity"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/results_text_view"
                    android:textColor="@color/colorResutsTextViewFontColor"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreesMinTxtView"
                    android:textSize="17sp"
                    android:textAlignment="gravity"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/results_text_view"
                    android:textColor="@color/colorResutsTextViewFontColor"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreesSecondsTxtView"
                    android:textSize="17sp"
                    android:textAlignment="gravity"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/results_text_view"
                    android:textColor="@color/colorResutsTextViewFontColor"
                    android:gravity="start"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <Button
                android:text="clear"
                android:layout_height="60dp"
                android:id="@+id/clearBtn"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/action_buttons"
                android:textColor="@color/colorActionButtonsText"
                android:layout_marginTop="15dp"
                android:layout_width="150dp" />

            <Button
                android:text="main menu"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/mainMenuBtn"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/jaycad_menu_button"
                android:textColor="#FFCC00"
                android:layout_marginTop="15dp" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>
